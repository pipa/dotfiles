[user]
    name = Luis Matute
    email = luis.matute@me.com

[core]
    editor = nvim
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

pull]
    rebase = true
[commit]
    template = ~/.gitmessage

[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    find = log --pretty=\"format:%H %Credauthor:%an %Cbluedate:%ar\n%Cgreen%s \" --name-status --grep
    o = checkout
    s = status
    pl = pull

